{
  "name": "scripta-image-processing",
  "version": "1.0.0",
  "description": "Image processing application built with Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "dev": "cross-env NODE_ENV=development electron . --dev",
    "build": "cross-env NODE_ENV=production electron-builder",
    "install-deps": "npm install",
    "clean": "rm -rf node_modules package-lock.json"
  },
  "devDependencies": {
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "unzipper": "^0.12.3"
  },
  "author": "Edoardo",
  "license": "MIT",
  "build": {
    "appId": "com.scripta.imageprocessing",
    "productName": "Scripta Image Processing",
    "buildDependenciesFromSource": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!src/python_env/**",
      "requirements.txt"
    ],
    "asarUnpack": [
      "src/projects/**/*.py",
      "requirements.txt"
    ],
    "extraFiles": [
      {
        "from": "src/python-embed",
        "to": "python-embed"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "publish": "never"
}
