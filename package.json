{
  "name": "scripta-image-processing",
  "version": "1.0.3",
  "description": "Image processing application built with Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "NODE_ENV=production electron .",
    "dev": "NODE_ENV=development vite & NODE_ENV=development electron . --dev",
    "prebuild": "vite build && node scripts/download-libvips-win.js && npm run build-rust",
    "prebuild:win": "vite build && node scripts/download-optimization-tools.js && node scripts/download-libvips-win.js && npm run build-rust:win",
    "build": "npm run prebuild && electron-builder",
    "vite:build": "vite build",
    "build-rust": "./build-rust.sh",
    "build-rust:win": "build-rust-simple.bat",
    "build:win": "npm run prebuild:win && electron-builder --win",
    "install-deps": "npm install",
    "clean": "rm -rf node_modules package-lock.json",
    "create-project": "node scripts/create-project.js"
  },
  "devDependencies": {
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@vitejs/plugin-vue": "^6.0.0",
    "bootstrap": "^5.3.7",
    "bootstrap-icons": "^1.13.1",
    "unzipper": "^0.12.3",
    "uuid": "^11.1.0",
    "vite": "^7.0.1",
    "vue": "^3.5.17"
  },
  "author": "Edoardo",
  "license": "MIT",
  "build": {
    "appId": "com.scripta.imageprocessing",
    "productName": "Scripta Image Processing",
    "buildDependenciesFromSource": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!src/python-env/**",
      "!src/renderer/**",
      "!.venv",
      "!.git/**",
      "!.github/**",
      "!node_modules/**",
      "dist/renderer/**/*",
      "src/renderer/*.html",
      "src/renderer/scripts/**/*",
      "src/renderer/styles/**/*",
      "requirements.txt"
    ],
    "asarUnpack": [
      "src/projects/**/*.py",
      "src/projects/project4/rust/space_media_optimizer/target/release/media-optimizer*",
      "requirements.txt",
      "src/python-embed/vips-bin/vips-dev-8.17/bin/*",
      "src/tools/**/*"
    ],
    "extraFiles": [
      {
        "from": "src/python-embed",
        "to": "python-embed"
      },
      {
        "from": "src/tools",
        "to": "tools"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "publish": "never",
  "type": "module"
}
